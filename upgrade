#!/bin/bash

RED="\033[1;31m"
GREEN="\033[1;32m"
NOCOLOR="\033[0m"

echo -e "${RED}updating repositories${NOCOLOR}"
sudo apt update
echo -e "${GREEN}repositories up to date${NOCOLOR}"
echo -e "${RED}upgrading system${NOCOLOR}"
sudo apt upgrade
echo -e "${GREEN}system upgraded successfuly!${NOCOLOR}"
echo -e "${RED}removing unnecessary software${NOCOLOR}"
sudo apt autoremove
echo -e "${GREEN}unnecessary software removed${NOCOLOR}"
if [ -f /var/run/reboot-required ]; then
  echo -e "${RED}reboot required${NOCOLOR}"
else
  echo -e "${GREEN}system updated, no reboot required${NOCOLOR}"
fi
